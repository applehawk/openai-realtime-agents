# Nginx configuration for https://rndaibot.ru/
# Place this in /etc/nginx/sites-available/rndaibot.ru
# Then symlink to /etc/nginx/sites-enabled/

upstream realtime_agents {
    server localhost:3000;
    keepalive 64;
}

server {
    listen 80;
    listen [::]:80;
    server_name rndaibot.ru www.rndaibot.ru;

    # Redirect HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name rndaibot.ru www.rndaibot.ru;

    # SSL Configuration - Update with your certificate paths
    ssl_certificate /etc/letsencrypt/live/rndaibot.ru/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/rndaibot.ru/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/rndaibot.ru/chain.pem;

    # SSL Security Settings
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    ssl_stapling on;
    ssl_stapling_verify on;

    # Security Headers
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # Logging
    access_log /var/log/nginx/rndaibot_access.log;
    error_log /var/log/nginx/rndaibot_error.log;

    # Client body size
    client_max_body_size 10M;

    # Proxy settings
    location / {
        proxy_pass http://realtime_agents;
        proxy_http_version 1.1;

        # WebSocket support (important for Realtime API)
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # Standard proxy headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;

        # Timeouts (important for long-running realtime connections)
        proxy_connect_timeout 60s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;

        # Buffering
        proxy_buffering off;
        proxy_request_buffering off;

        # Next.js specific
        proxy_redirect off;
    }

    # Static files caching
    location /_next/static/ {
        proxy_pass http://realtime_agents;
        proxy_cache_valid 200 60m;
        add_header Cache-Control "public, immutable";
    }

    # Favicon and robots
    location = /favicon.ico {
        proxy_pass http://realtime_agents;
        access_log off;
        log_not_found off;
    }

    location = /robots.txt {
        proxy_pass http://realtime_agents;
        access_log off;
        log_not_found off;
    }

    # Health check endpoint
    location /api/health {
        proxy_pass http://realtime_agents;
        access_log off;
    }
}
