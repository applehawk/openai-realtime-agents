# OpenAI API Key (required)
OPENAI_API_KEY=your_api_key

# Auth API URL (used by the application) - no trailing slash
NEXT_PUBLIC_AUTH_API_URL=https://rndaibot.ru/api/v1

# Node environment (production/development)
NODE_ENV=production

# Next.js configuration
PORT=3000
HOSTNAME=0.0.0.0

# SSL/TLS Configuration
# Set to 0 to disable SSL certificate verification (useful for self-signed certificates)
# WARNING: Only use this in development or when you trust the server
# In production with proper certificates, remove this or set to 1
NODE_TLS_REJECT_UNAUTHORIZED=0